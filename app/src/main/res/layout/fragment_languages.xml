<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueOcean">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".fragment.LanguagesFragment">


    <TextView
        android:id="@+id/txtHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programming Languages"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/txtJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java"
        android:layout_below="@+id/txtHead"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtJavaD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java is a general-purpose programming language that is class-based and object-oriented, and designed to have as few implementation dependencies as possible. It is intended to let application developers write once, run anywhere , meaning that compiled Java code can run on all platforms that support Java without the need of recompilation."
        android:layout_below="@+id/txtJava"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btnJava"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Learn Java"
        android:layout_below="@id/txtJavaD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"/>


    <TextView
    android:id="@+id/txtCPlus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="C++"
    android:layout_below="@+id/btnJava"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:textSize="30sp"
    android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtCPlusD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C++  is a general-purpose programming language created by Bjarne Stroustrup as an extension of the C programming language. The language has expanded significantly over time, and modern C++ now has object-oriented, generic, and functional features in addition to facilities for low-level memory manipulation. It is almost always implemented as a compiled language, and many vendors provide C++ compilers, including the Free Software Foundation, LLVM, Microsoft, Intel, Oracle, and IBM, so it is available on many platforms."
        android:layout_below="@+id/txtCPlus"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btnCPlus"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Learn C++"
        android:layout_below="@id/txtCPlusD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"/>



    <TextView
        android:id="@+id/txtC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:layout_below="@+id/btnCPlus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtCD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C is a general-purpose, procedural computer programming language supporting structured programming, lexical variable scope, and recursion, with a static type system. C is an imperative procedural language. It was designed to be compiled to provide low-level access to memory and language constructs that map efficiently to machine instructions, all with minimal runtime support. Despite its low-level capabilities, the language was designed to encourage cross-platform programming. A standards-compliant C program written with portability in mind can be compiled for a wide variety of computer platforms and operating systems with few changes to its source code."
        android:layout_below="@+id/txtC"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btnC"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Learn C"
        android:layout_below="@id/txtCD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"/>


    <TextView
        android:id="@+id/txtPython"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Python"
        android:layout_below="@+id/btnC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtPythonD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Python is an interpreted, high-level, general-purpose programming language. Its language constructs and object-oriented approach aim to help programmers write clear, logical code for small and large-scale projects.Python is dynamically typed and garbage-collected. It supports multiple programming paradigms, including structured (particularly, procedural), object-oriented, and functional programming. "
        android:layout_below="@+id/txtPython"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btnPython"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Learn Python"
        android:layout_below="@id/txtPythonD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"/>

    <TextView
        android:id="@+id/txtKotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kotlin"
        android:layout_below="@+id/btnPython"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtKotlinD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kotlin is a cross-platform, statically typed, general-purpose programming language with type inference. Kotlin is designed to interoperate fully with Java, and the JVM version of its standard library depends on the Java Class Library, but type inference allows its syntax to be more concise. Kotlin mainly targets the JVM, but also compiles to JavaScript or native code (via LLVM). Language development costs are borne by JetBrains, while the Kotlin Foundation protects the Kotlin trademark."
        android:layout_below="@+id/txtKotlin"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btnKotlin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Learn Kotlin"
        android:layout_below="@id/txtKotlinD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"/>


    <TextView
        android:id="@+id/txtJS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JavaScript"
        android:layout_below="@+id/btnKotlin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtJSDD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JavaScript  often abbreviated as JS, is a programming language that conforms to the ECMAScript specification.JavaScript is high-level, often just-in-time compiled, and multi-paradigm. It has curly-bracket syntax, dynamic typing, prototype-based object-orientation, and first-class functions."
        android:layout_below="@+id/txtJS"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btnJS"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Learn JavaScript"
        android:layout_below="@id/txtJSDD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"/>


    <TextView
        android:id="@+id/txtGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Golang"
        android:layout_below="@+id/btnJS"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtGoD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go is a statically typed , compiled programming language designed at Google by Robert Griesemer, Rob Pike, and Ken Thompson.Go is syntactically similar to C, but with memory safety, garbage collection, structural typing , and CSP-style concurrency ."
        android:layout_below="@+id/txtGo"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btnGo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Learn Golang"
        android:layout_below="@id/txtGoD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"/>

    <TextView
        android:id="@+id/txtCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C#"
        android:layout_below="@+id/btnGo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtCSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C# is a general-purpose, multi-paradigm programming language encompassing strong typing, lexically scoped, imperative, declarative, functional, generic, object-oriented (class-based), and component-oriented programming disciplines."
        android:layout_below="@+id/txtCS"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btnCS"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Learn C#"
        android:layout_below="@id/txtCSD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"/>


    <TextView
        android:id="@+id/txtHtml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HTML"
        android:layout_below="@+id/btnCS"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtHtmlD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hypertext Markup Language (HTML) is the standard markup language for documents designed to be displayed in a web browser. It can be assisted by technologies such as Cascading Style Sheets (CSS) and scripting languages such as JavaScript and VBScript."
        android:layout_below="@+id/txtHtml"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btnHtml"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Learn HTML"
        android:layout_below="@id/txtHtmlD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/mybutton"/>


    <TextView
        android:id="@+id/txtCSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSS"
        android:layout_below="@+id/btnHtml"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtCSSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cascading Style Sheets (CSS) is a style sheet language used for describing the presentation of a document written in a markup language like HTML. CSS is a cornerstone technology of the World Wide Web, alongside HTML and JavaScript. CSS is designed to enable the separation of presentation and content, including layout, colors, and fonts. This separation can improve content accessibility, provide more flexibility and control in the specification of presentation characteristics, enable multiple web pages to share formatting by specifying the relevant CSS in a separate .css file, and reduce complexity and repetition in the structural content."
       android:layout_below="@+id/txtCSS"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btnCSS"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Learn CSS"
        android:layout_below="@id/txtCSSD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/mybutton"/>






</RelativeLayout>

</ScrollView>