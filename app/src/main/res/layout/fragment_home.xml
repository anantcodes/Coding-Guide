<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueOcean"
    tools:context=".fragment.HomeFragment">


    <TextView
        android:id="@+id/txtHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It's time to learn and explore"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        android:padding="10dp"/>


    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_below="@id/txtHead"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtWorry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a language and start your coding career"
        android:textColor="#000000"
        android:layout_below="@+id/txtDate"
        android:padding="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtDevelop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Develop your interest and get started"
        android:layout_below="@+id/txtWorry"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imgCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/txtDevelop"
        android:src="@drawable/code"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/txtCoffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grab your coffee and code"
        android:layout_below="@+id/imgCode"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_red_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Happy Coding!"
        android:layout_below="@+id/txtCoffee"
        android:padding="10dp"
        android:textSize="28sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>












</RelativeLayout>
