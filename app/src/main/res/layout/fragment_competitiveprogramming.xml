<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbdefb">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragment.CompetitiveProgrammingFragment">

        <TextView
            android:id="@+id/txtHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="How to prepare for Competitive Programming?"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHead"
            android:padding="10dp"
            android:text="1) Choose a programming language:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtChoose"
            android:layout_marginStart="10dp"
            android:text="To learn a particular language click "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtHere1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtChoose"
            android:layout_toEndOf="@+id/txtLang"
            android:text="here"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txtTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHere1"
            android:padding="10dp"
            android:text="2) Understand the Concept of Time and Space Complexity:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTC"
            android:layout_marginStart="10dp"
            android:text="To know more about Time Complexity click "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtHere2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTC"
            android:layout_toEndOf="@+id/txtT"
            android:text="here"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtT"
            android:layout_marginStart="10dp"
            android:text="To know more about Space Complexity click "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtHere3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtT"
            android:layout_toEndOf="@+id/txtS"
            android:text="here"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txtDSA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHere3"
            android:padding="10dp"
            android:text="3) Learn the Fundamentals of Data Structures and Algorithms:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDSA"
            android:layout_marginStart="10dp"
            android:text="To study about Data Structures click "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtHere4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDSA"
            android:layout_toEndOf="@+id/txtD"
            android:text="here"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtD"
            android:layout_marginStart="10dp"
            android:text="To study about Algorithms click "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtHere5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtD"
            android:layout_toEndOf="@+id/txtA"
            android:text="here"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txtSolve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHere5"
            android:padding="10dp"
            android:text="4) Practice:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCodeChef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSolve"
            android:layout_marginStart="10dp"
            android:text="To practice on CodeChef :"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCodeChef"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCodeChef"
            android:layout_centerHorizontal="true"
            android:background="@drawable/mybutton"
            android:text="Open CodeChef" />

        <TextView
            android:id="@+id/txtCodeforces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCodeChef"
            android:layout_marginStart="10dp"
            android:text="To practice on Codeforces :"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCodeforces"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCodeforces"
            android:layout_centerHorizontal="true"
            android:background="@drawable/mybutton"
            android:text="Open Codeforces" />

        <TextView
            android:id="@+id/txtHacker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCodeforces"
            android:layout_marginStart="10dp"
            android:text="To practice on HackerRank :"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnHacker"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtHacker"
            android:layout_marginBottom="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/mybutton"
            android:text="Open HackerRank" />
    </RelativeLayout>
</ScrollView>